<odoo>
	<data>
		<record id="csv_odoo_bridge.multi_channel_view_form" model="ir.ui.view">
			<field name="name">multi.channel.sale.inherited</field>
			<field name="model">multi.channel.sale</field>
			<field name="inherit_id" ref="odoo_multi_channel_sale.multi_channel_view_form" />
			<field name="arch" type="xml">
				<xpath expr="//group[@name='import_buttons']" position="before">
					<center>
						<separator
							string="Import CSV File"
							attrs ="{'invisible':[('channel','!=', 'csv')]}"
						/>
					</center>
					<center>
						<group>
							<button
								attrs= "{'invisible':['!',('channel','!=', 'csv'),('state','!=','validate')]}"
								name="csv_odoo_bridge.action_import_csv_orders"
								type="action"
								class="oe_highlight wk_operation_btn box"
								icon="fa-6x fa-shopping-cart"
								help="It will import csv order data in Odoo">
								<span> Import Order CSV</span> <span>&#032; <i class='fa fa-fw fa-cloud-upload' aria-label="Export Attributes" title="Export Attributes" role="img"/></span>
							</button>
						</group>
					</center>
				</xpath>
				<group name="credentials" position="after">
					<group attrs="{'invisible':[('channel','!=','csv')]}">
						<separator colspan="2" string="CSV Header Mapping"/>
						<p colspan="2">
							At least Product Store ID, Order Store ID and Customer Store ID must be mapped.
						</p>
						<field
							name   ="csv_header_mapping_ids"
							nolabel="1"
							colspan="2"
							attrs  ="{'readonly':[('state','=', 'validate')]}"
						>
							<tree editable="bottom">
								<field name="name"/>
								<field name="odoo_field"/>
							</tree>
						</field>
					</group>
				</group>
			</field>
		</record>
	</data>
</odoo>
