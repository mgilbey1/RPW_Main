<odoo>
	<data noupdate='1'>
		<record model="crm.team" id="team_sales_csv">
			<field name="name">CSV Sales</field>
			<field name="member_ids" eval="[(4, ref('base.user_root'))]"/>
		</record>

		<record id="item_product_id" forcecreate='True' model="csv.header.mappings">
			<field name="name">item_product_id</field>
			<field name="odoo_field">product_store_id</field>
		</record>
		<record id="item_sku" forcecreate='True' model="csv.header.mappings">
			<field name="name">item_sku</field>
			<field name="odoo_field">product_barcode</field>
		</record>
		<record id="item_name" forcecreate='True' model="csv.header.mappings">
			<field name="name">item_name</field>
			<field name="odoo_field">product_name</field>
		</record>
		<record id="item_quantity" forcecreate='True' model="csv.header.mappings">
			<field name="name">item_quantity</field>
			<field name="odoo_field">product_uom_qty</field>
		</record>
		<record id="item_price" forcecreate='True' model="csv.header.mappings">
			<field name="name">item_price</field>
			<field name="odoo_field">product_price_unit</field>
		</record>

		<record id="order_number" forcecreate='True' model="csv.header.mappings">
			<field name="name">order_number</field>
			<field name="odoo_field">order_store_id</field>
		</record>
		<record id="customer_id" forcecreate='True' model="csv.header.mappings">
			<field name="name">customer_id</field>
			<field name="odoo_field">customer_partner_id</field>
		</record>

		<record id="billing_first_name" forcecreate='True' model="csv.header.mappings">
			<field name="name">billing_first_name</field>
			<field name="odoo_field">customer_name</field>
		</record>

		<record id="csv_channel" forcecreate='True' model="multi.channel.sale">
			<field name="name">CSV</field>
			<field name="channel">csv</field>
			<field name="discount_product_id" ref='odoo_multi_channel_sale.discount_product'/>
			<field name="delivery_product_id" ref='odoo_multi_channel_sale.delivery_product'/>
			<field name="crm_team_id" ref='csv_odoo_bridge.team_sales_csv'/>
			<field name="color">1</field>
			<field name="environment">production</field>
			<field
				name="csv_header_mapping_ids"
				eval="[(6,0,[
					ref('item_product_id'),
					ref('item_sku'),
					ref('item_name'),
					ref('item_quantity'),
					ref('item_price'),
					ref('order_number'),
					ref('customer_id'),
					ref('billing_first_name')
				])]"
			/>
		</record>
		<record id="csv_order_states" forcecreate='True' model="channel.order.states">
			<field name="channel_id" ref="csv_odoo_bridge.csv_channel"/>
			<field name="default_order_state">True</field>
			<field name="odoo_order_state">sale</field>
			<field name="odoo_create_invoice">True</field>
			<field name="odoo_set_invoice_state">open</field>
		</record>
	</data>
</odoo>
