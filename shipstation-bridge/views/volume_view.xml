<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="view_product_template_volume" model="ir.ui.view">
            <field name="name">product.template.volume</field>
            <field name="model">product.template</field>
            <field name="inherit_id" ref="stock.view_template_property_form"/>
            <field name="arch" type="xml">
                <xpath expr="//group[@name='group_lots_and_weight']" position="replace">
                    <group string="Logistics" name="group_lots_and_weight" attrs="{'invisible':[('type', 'not in', ['product', 'consu'])]}">
                        <label for="weight"/>
                        <div class="o_row" name="weight">
                            <field name="weight" style="width:60px" /><span>lbs</span>
                        </div>
                        <label for="volume"/>
                        <div name="volume">
                            <span> Length: </span><field name="product_length" style="width:60px" />
                            <span> Width: </span><field name="product_width" style="width:60px" />
                            <span> Height: </span><field name="product_height" style="width:60px" /><br/>
                            <span>Calculated Volume: </span><field name="volume" style="width:60px" /><span> inÂ³</span>
                        </div>
                    </group>
                </xpath>
            </field>
        </record>
    </data>
</odoo>